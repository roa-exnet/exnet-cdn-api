	"item": [
		{
			"name": "1. Autenticación",
			"item": [
				{
					"name": "Obtener Token Admin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var response = pm.response.json();",
									"pm.environment.set(\"admin_token\", response.access_token);",
									"pm.test(\"Token de administrador obtenido\", function () {",
									"    pm.response.to.have.status(200);",
									"    pm.expect(response.access_token).to.not.be.undefined;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/x-www-form-urlencoded"
							}
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "username",
									"value": "{{admin_username}}",
									"type": "text"
								},
								{
									"key": "password",
									"value": "{{admin_password}}",
									"type": "text"
								},
								{
									"key": "client_id",
									"value": "{{client_id}}",
									"type": "text"
								},
								{
									"key": "grant_type",
									"value": "password",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{keycloak_url}}/auth/realms/master/protocol/openid-connect/token",
							"host": [
								"{{keycloak_url}}"
							],
							"path": [
								"auth",
								"admin",
								"realms",
								"{{realm}}",
								"users",
								"{{user_id}}"
							]
						},
						"description": "Deshabilita un usuario para revocar su licencia"
					},
					"response": []
				},
				{
					"name": "Listar Sesiones de Usuario",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{admin_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{keycloak_url}}/auth/admin/realms/{{realm}}/users/{{user_id}}/sessions",
							"host": [
								"{{keycloak_url}}"
							],
							"path": [
								"auth",
								"admin",
								"realms",
								"{{realm}}",
								"users",
								"{{user_id}}",
								"sessions"
							]
						},
						"description": "Lista todas las sesiones activas de un usuario"
					},
					"response": []
				}
			],
			"description": "Operaciones para gestionar licencias de usuarios"
		},
		{
			"name": "7. Client Scopes y Mappers",
			"item": [
				{
					"name": "Crear Client Scope para Licencias",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{admin_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"license-info\",\n    \"protocol\": \"openid-connect\",\n    \"description\": \"Información de licencia de usuario\"\n}"
						},
						"url": {
							"raw": "{{keycloak_url}}/auth/admin/realms/{{realm}}/client-scopes",
							"host": [
								"{{keycloak_url}}"
							],
							"path": [
								"auth",
								"admin",
								"realms",
								"{{realm}}",
								"client-scopes"
							]
						},
						"description": "Crea un scope para incluir información de licencia en los tokens"
					},
					"response": []
				},
				{
					"name": "Listar Client Scopes",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var response = pm.response.json();",
									"",
									"// Buscar el ID del scope de licencia",
									"for (var i = 0; i < response.length; i++) {",
									"    if (response[i].name === \"license-info\") {",
									"        pm.environment.set(\"license_scope_id\", response[i].id);",
									"    }",
									"}",
									"",
									"pm.test(\"Client scopes listados correctamente\", function () {",
									"    pm.response.to.have.status(200);",
									"    pm.expect(response).to.be.an('array');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{admin_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{keycloak_url}}/auth/admin/realms/{{realm}}/client-scopes",
							"host": [
								"{{keycloak_url}}"
							],
							"path": [
								"auth",
								"admin",
								"realms",
								"{{realm}}",
								"client-scopes"
							]
						},
						"description": "Lista todos los client scopes del realm"
					},
					"response": []
				},
				{
					"name": "Crear Mapper para licenseType",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{admin_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"licenseType\",\n    \"protocol\": \"openid-connect\",\n    \"protocolMapper\": \"oidc-usermodel-attribute-mapper\",\n    \"config\": {\n        \"userinfo.token.claim\": \"true\",\n        \"user.attribute\": \"licenseType\",\n        \"id.token.claim\": \"true\",\n        \"access.token.claim\": \"true\",\n        \"claim.name\": \"licenseType\",\n        \"jsonType.label\": \"String\"\n    }\n}"
						},
						"url": {
							"raw": "{{keycloak_url}}/auth/admin/realms/{{realm}}/client-scopes/{{license_scope_id}}/protocol-mappers/models",
							"host": [
								"{{keycloak_url}}"
							],
							"path": [
								"auth",
								"admin",
								"realms",
								"{{realm}}",
								"client-scopes",
								"{{license_scope_id}}",
								"protocol-mappers",
								"models"
							]
						},
						"description": "Crea un mapper para incluir el tipo de licencia en los tokens"
					},
					"response": []
				},
				{
					"name": "Crear Mapper para licenseId",
