								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"usageCount\",\n    \"protocol\": \"openid-connect\",\n    \"protocolMapper\": \"oidc-usermodel-attribute-mapper\",\n    \"config\": {\n        \"userinfo.token.claim\": \"true\",\n        \"user.attribute\": \"usageCount\",\n        \"id.token.claim\": \"true\",\n        \"access.token.claim\": \"true\",\n        \"claim.name\": \"usageCount\",\n        \"jsonType.label\": \"String\"\n    }\n}"
						},
						"url": {
							"raw": "{{keycloak_url}}/auth/admin/realms/{{realm}}/client-scopes/{{license_scope_id}}/protocol-mappers/models",
							"host": [
								"{{keycloak_url}}"
							],
							"path": [
								"auth",
								"admin",
								"realms",
								"{{realm}}",
								"client-scopes",
								"{{license_scope_id}}",
								"protocol-mappers",
								"models"
							]
						},
						"description": "Crea un mapper para incluir el contador de uso en los tokens"
					},
					"response": []
				}
			],
			"description": "Operaciones para configurar client scopes y mappers para incluir información de licencia en los tokens"
		},
		{
			"name": "8. Gestión de Clientes",
			"item": [
				{
					"name": "Crear Cliente para la Aplicación",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{admin_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"clientId\": \"licencias-app\",\n    \"name\": \"Aplicación de Licencias\",\n    \"description\": \"Aplicación para gestionar licencias\",\n    \"enabled\": true,\n    \"clientAuthenticatorType\": \"client-secret\",\n    \"redirectUris\": [\n        \"https://tuaplicacion.com/*\"\n    ],\n    \"webOrigins\": [\n        \"https://tuaplicacion.com\"\n    ],\n    \"publicClient\": false,\n    \"protocol\": \"openid-connect\",\n    \"standardFlowEnabled\": true,\n    \"directAccessGrantsEnabled\": true,\n    \"serviceAccountsEnabled\": true\n}"
						},
						"url": {
							"raw": "{{keycloak_url}}/auth/admin/realms/{{realm}}/clients",
							"host": [
								"{{keycloak_url}}"
							],
							"path": [
								"auth",
								"admin",
								"realms",
								"{{realm}}",
								"clients"
							]
						},
						"description": "Crea un cliente para tu aplicación"
					},
					"response": []
				},
				{
					"name": "Listar Clientes",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var response = pm.response.json();",
									"",
									"// Buscar el ID del cliente",
									"for (var i = 0; i < response.length; i++) {",
									"    if (response[i].clientId === \"licencias-app\") {",
									"        pm.environment.set(\"client_id\", response[i].id);",
									"    }",
									"}",
									"",
									"pm.test(\"Clientes listados correctamente\", function () {",
									"    pm.response.to.have.status(200);",
									"    pm.expect(response).to.be.an('array');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{admin_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{keycloak_url}}/auth/admin/realms/{{realm}}/clients",
							"host": [
								"{{keycloak_url}}"
							],
							"path": [
								"auth",
								"admin",
								"realms",
								"{{realm}}",
								"clients"
							]
						},
						"description": "Lista todos los clientes del realm"
					},
					"response": []
				},
				{
					"name": "Obtener Secreto del Cliente",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{admin_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{keycloak_url}}/auth/admin/realms/{{realm}}/clients/{{client_id}}/client-secret",
							"host": [
								"{{keycloak_url}}"
							],
							"path": [
								"auth",
								"admin",
								"realms",
								"{{realm}}",
								"clients",
								"{{client_id}}",
								"client-secret"
							]
						},
						"description": "Obtiene el secreto del cliente para autenticación"
					},
					"response": []
				},
				{
					"name": "Asignar Client Scope a Cliente",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{admin_token}}",
									"type": "string"
								}
							]
						},
						"method": "PUT",
						"header": [],
						"url": {
							"raw": "{{keycloak_url}}/auth/admin/realms/{{realm}}/clients/{{client_id}}/default-client-scopes/{{license_scope_id}}",
							"host": [
								"{{keycloak_url}}"
							],
							"path": [
								"auth",
								"admin",
								"realms",
								"{{realm}}",
								"clients",
								"{{client_id}}",
								"default-client-scopes",
								"{{license_scope_id}}"
							]
						},
						"description": "Asigna el scope de licencia al cliente"
					},
					"response": []
				}
			],
			"description": "Operaciones para crear y configurar clientes para tu aplicación"
		},
