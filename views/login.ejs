<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="custom-card shadow">
        <div class="custom-card-header">
          <h3 class="mb-0 text-center">
            <div class="icon me-2" style="color: var(--primary-color);">
              <i class="fas fa-sign-in-alt"></i>
            </div>
            Iniciar sesión
          </h3>
        </div>
        <div class="custom-card-body">
          
          <% if (error && error.length > 0) { %>
            <div class="alert alert-danger mb-4" role="alert">
              <%= error %>
            </div>
          <% } %>
          
          <% if (success && success.length > 0) { %>
            <div class="alert alert-success mb-4" role="alert">
              <%= success %>
            </div>
          <% } %>
          
          <form action="/login" method="POST">
            <div class="mb-3">
              <label for="username" class="form-label">Nombre de usuario</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <input type="text" class="form-control" id="username" name="username" placeholder="Ingrese su nombre de usuario" required>
              </div>
            </div>
            
            <div class="mb-4">
              <label for="password" class="form-label">Contraseña</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña" required>
              </div>
            </div>
            
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">Iniciar sesión</button>
            </div>
          </form>
          
          <div class="text-center mt-4">
            <p class="mb-0 text-muted">¿No tienes una cuenta? <a href="/register" class="text-primary">Regístrate</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>