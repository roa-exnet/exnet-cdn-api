<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <h1 class="display-4 mb-4 fw-bold">Panel de administración CDN</h1>
      <p class="lead text-muted">Gestiona los módulos de tu CDN para descargas remotas</p>
      
      <div class="mt-5">
        <% if (locals.user) { %>
          <a href="/dashboard" class="btn btn-primary btn-lg px-4 me-2">
            <i class="fas fa-tachometer-alt me-2"></i> Ir al Dashboard
          </a>
        <% } else { %>
          <a href="/login" class="btn btn-primary btn-lg px-4 me-2">
            <i class="fas fa-sign-in-alt me-2"></i> Iniciar sesión
          </a>
          <a href="/register" class="btn btn-secondary btn-lg px-4">
            <i class="fas fa-user-plus me-2"></i> Registrarse
          </a>
        <% } %>
      </div>
      
      <div class="mt-5">
        <div class="custom-card shadow-sm">
          <div class="custom-card-body">
            <h5 class="card-title mb-4">¿Qué puedes hacer?</h5>
            <div class="row mt-4">
              <div class="col-md-4 mb-3">
                <div class="d-flex flex-column align-items-center">
                  <div class="icon-wrapper mb-3" style="background: rgba(79, 70, 229, 0.1); color: var(--primary-color)">
                    <i class="fas fa-upload fa-2x"></i>
                  </div>
                  <h6 class="fw-bold">Subir Módulos</h6>
                  <p class="small text-muted text-center">Sube tus módulos ZIP al servidor</p>
                </div>
              </div>
              <div class="col-md-4 mb-3">
                <div class="d-flex flex-column align-items-center">
                  <div class="icon-wrapper mb-3" style="background: rgba(79, 70, 229, 0.1); color: var(--primary-color)">
                    <i class="fas fa-key fa-2x"></i>
                  </div>
                  <h6 class="fw-bold">Gestionar Licencias</h6>
                  <p class="small text-muted text-center">Controla las licencias para módulos premium</p>
                </div>
              </div>
              <div class="col-md-4 mb-3">
                <div class="d-flex flex-column align-items-center">
                  <div class="icon-wrapper mb-3" style="background: rgba(79, 70, 229, 0.1); color: var(--primary-color)">
                    <i class="fas fa-cogs fa-2x"></i>
                  </div>
                  <h6 class="fw-bold">Administrar API</h6>
                  <p class="small text-muted text-center">Configura la API de descarga</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>