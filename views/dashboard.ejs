<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container mt-4">
  <h1 class="mb-4">Dashboard</h1>
  
  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <div class="row">
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-primary">
          <h5 class="card-title mb-0"><i class="fas fa-plus-circle me-2"></i>Añadir módulo</h5>
        </div>
        <div class="card-body">
          <form action="/modules/add" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="name" class="form-label">Nombre del módulo</label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
            
            <div class="mb-3">
              <label for="type" class="form-label">Tipo</label>
              <input type="text" class="form-control" id="type" name="type" required placeholder="ej. moduloStreaming">
            </div>
            
            <div class="mb-3">
              <label for="version" class="form-label">Versión</label>
              <input type="text" class="form-control" id="version" name="version" placeholder="1.0.0">
            </div>
            
            <div class="mb-3">
              <label for="price" class="form-label">Precio</label>
              <select class="form-select" id="price" name="price">
                <option value="free">Gratuito</option>
                <option value="premium">Premium</option>
              </select>
            </div>
            
            <div class="mb-3">
              <label for="description" class="form-label">Descripción</label>
              <textarea class="form-control" id="description" name="description" rows="2"></textarea>
            </div>
            
            <div class="mb-3">
              <label for="install_command" class="form-label">Comando de instalación</label>
              <input type="text" class="form-control" id="install_command" name="install_command" placeholder="cd src/{{moduleDir}} && composer install">
              <small class="form-text text-muted">
                Puedes usar {{moduleDir}} para la ruta del módulo y {{projectDir}} para la raíz del proyecto.
              </small>
            </div>
            
            <div class="mb-3">
              <label for="moduleFile" class="form-label">Archivo ZIP</label>
              <input class="form-control" type="file" id="moduleFile" name="moduleFile" accept=".zip" required>
            </div>
            
            <div class="d-grid">
              <button type="submit" class="btn btn-primary"><i class="fas fa-upload me-2"></i>Subir módulo</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    
    <!-- Lista de módulos -->
    <div class="col-md-8 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary">
          <h5 class="card-title mb-0"><i class="fas fa-list me-2"></i>Módulos disponibles</h5>
          <span class="badge bg-light"><%= modules.length %> módulos</span>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="bg-primary">
                <tr>
                  <th scope="col">Nombre</th>
                  <th scope="col">Tipo</th>
                  <th scope="col">Versión</th>
                  <th scope="col">Precio</th>
                  <th scope="col">Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% if (modules.length === 0) { %>
                  <tr>
                    <td colspan="5" class="text-center py-3">No hay módulos disponibles</td>
                  </tr>
                <% } else { %>
                  <% modules.forEach(module => { %>
                    <tr>
                      <td><%= module.name %></td>
                      <td><span class="badge bg-secondary"><%= module.type %></span></td>
                      <td><%= module.version || '1.0.0' %></td>
                      <td>
                        <% if (module.price === 'premium') { %>
                          <span class="badge bg-warning text-dark">Premium</span>
                        <% } else { %>
                          <span class="badge bg-success">Gratuito</span>
                        <% } %>
                      </td>
                      <td>
                        <div class="btn-group btn-group-sm" role="group">
                          <button type="button" class="btn btn-outline-primary" data-bs-toggle="tooltip" title="Ver detalles">
                            <i class="fas fa-eye"></i>
                          </button>
                          <form action="/modules/delete/<%= module.id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger" data-bs-toggle="tooltip" title="Eliminar" onclick="return confirm('¿Estás seguro de eliminar este módulo?')">
                              <i class="fas fa-trash-alt"></i>
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="card shadow-sm h-100">
      <div class="card-header bg-success">
        <h5 class="card-title mb-0"><i class="fas fa-folder-plus me-2"></i>Subir proyecto base</h5>
      </div>
      <div class="card-body">
        <form action="/base-source/add" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="description" class="form-label">Descripción</label>
            <textarea class="form-control" id="description" name="description" rows="2" placeholder="Descripción del proyecto base"></textarea>
          </div>
          
          <div class="mb-3">
            <label for="version" class="form-label">Versión</label>
            <input type="text" class="form-control" id="version" name="version" placeholder="ej. 1.0.0" required>
          </div>
          
          <div class="mb-3">
            <label for="baseFile" class="form-label">Archivo ZIP (proyecto base)</label>
            <input class="form-control" type="file" id="baseFile" name="baseFile" accept=".zip" required>
          </div>
          
          <div class="d-grid">
            <button type="submit" class="btn btn-success"><i class="fas fa-upload me-2"></i>Subir proyecto base</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="card shadow-sm h-100">
      <div class="card-header bg-success">
        <h5 class="card-title mb-0"><i class="fas fa-folder me-2"></i>Proyecto base actual</h5>
      </div>
      <div class="card-body">
        <% if (baseSource) { %>
          <p><strong>Archivo:</strong> <%= baseSource.filename %></p>
          <p><strong>Versión:</strong> <%= baseSource.version %></p>
          <p><strong>Descripción:</strong> <%= baseSource.description || 'Sin descripción' %></p>
          <a href="/api/download/base_source/<%= baseSource.filename %>" class="btn btn-sm btn-outline-success">
            <i class="fas fa-download me-2"></i>Descargar
          </a>
          <form action="/base-source/delete/<%= baseSource.id %>" method="POST" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Estás seguro de eliminar el proyecto base?')">
              <i class="fas fa-trash-alt me-2"></i>Eliminar
            </button>
          </form>
        <% } else { %>
          <p>No hay proyecto base subido aún.</p>
        <% } %>
      </div>
    </div>
  </div>
  
  <div class="row mt-2">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-header bg-primary">
          <h5 class="card-title mb-0"><i class="fas fa-chart-bar me-2"></i>Estadísticas</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4 mb-3">
              <div class="card h-100 border-primary">
                <div class="card-body text-center">
                  <i class="fas fa-archive fa-3x text-primary mb-3"></i>
                  <h5 class="card-title">Total de módulos</h5>
                  <p class="card-text display-6"><%= modules.length %></p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card h-100 border-warning">
                <div class="card-body text-center">
                  <i class="fas fa-star fa-3x text-warning mb-3"></i>
                  <h5 class="card-title">Módulos premium</h5>
                  <p class="card-text display-6"><%= modules.filter(m => m.price === 'premium').length %></p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card h-100 border-success">
                <div class="card-body text-center">
                  <i class="fas fa-gift fa-3x text-success mb-3"></i>
                  <h5 class="card-title">Módulos gratuitos</h5>
                  <p class="card-text display-6"><%= modules.filter(m => m.price !== 'premium').length %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>